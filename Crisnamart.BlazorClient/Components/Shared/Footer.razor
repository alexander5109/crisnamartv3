@using Crisnamart.Domain

@code {
	[Parameter, EditorRequired]
	public required List<FooterColumn> Columns { get; set; }

	[Parameter, EditorRequired]
	public required List<FooterPayment> MediosDePago { get; set; }

	[Parameter, EditorRequired]
	public required List<FooterSocial> RedesSociales { get; set; }

	[Parameter, EditorRequired]
	public required FooterTrademark Trademark { get; set; }

	private FooterColumn firstColumna => Columns[0];
	private int firstColumnaLength => firstColumna.Enlaces.Count;
}

<footer class="bg-gray-200 py-8">
	<div class="container mx-auto">
		<div class="flex flex-wrap justify-center md:gap-4 lg:gap-0 py-4 mb-6">

			@if (firstColumnaLength > 6) {
				<div class="w-full md:w-full lg:w-1/3 flex flex-col gap-4 mb-6">
					<h6>@firstColumna.Titulo</h6>
					<div class="flex flex-wrap">
						<div class="w-1/2">
							<ul class="flex flex-col gap-2">
								@foreach (var enlace in firstColumna.Enlaces.Take((firstColumnaLength + 1) / 2)) {
									<li><a href="@enlace.Url" class="inline-block hover:text-green-600">@enlace.Nombre</a></li>
								}
							</ul>
						</div>
						<div class="w-1/2">
							<ul class="flex flex-col gap-2">
								@foreach (var enlace in firstColumna.Enlaces.Skip((firstColumnaLength + 1) / 2)) {
									<li><a href="@enlace.Url" class="inline-block hover:text-green-600">@enlace.Nombre</a></li>
								}
							</ul>
						</div>
					</div>
				</div>
			} else {
				<div class="w-full md:w-full lg:w-1/3 flex flex-col gap-4 mb-6">
					<h6>@firstColumna.Titulo</h6>
					<ul class="flex flex-col gap-2">
						@foreach (var enlace in firstColumna.Enlaces) {
							<li><a href="@enlace.Url" class="inline-block hover:text-green-600">@enlace.Nombre</a></li>
						}
					</ul>
				</div>
			}

			<div class="w-full md:w-full lg:w-2/3">
				<div class="flex flex-wrap justify-center">
					@foreach (var col in Columns.Skip(1)) {
						<div class="w-1/2 sm:w-1/2 md:w-1/4 flex flex-col gap-4 mb-6">
							<h6>@col.Titulo</h6>
							<ul class="flex flex-col gap-2">
								@foreach (var link in col.Enlaces) {
									<li><a href="@link.Url" class="inline-block hover:text-green-600">@link.Nombre</a></li>
								}
							</ul>
						</div>
					}
				</div>
			</div>
		</div>

		<!-- Medios de pago + Apps -->
		<div class="border-t py-4 border-gray-300">
			<div class="gap-y-4 flex flex-wrap items-center justify-center lg:justify-between">
				<div class="flex flex-col md:flex-row items-center gap-3 md:gap-6">
					<div class="text-gray-900">Medios de pago</div>
					<ul class="flex items-center flex-row gap-4">
						@foreach (var medio in MediosDePago) {
							<li>
								<a href="@medio.Url"><img src="@medio.ImagePath" alt="@medio.Nombre" class="h-6" /></a>
							</li>
						}
					</ul>
				</div>

				<div class="flex flex-col md:flex-row items-center gap-3 md:gap-6">
					<div class="text-gray-900">Recibí tus pedidos de Crisnamart</div>
					<ul class="flex flex-row gap-2">
						<li><a href="#!"><img src="images/appbutton/appstore-btn.svg" style="width:140px" /></a></li>
						<li><a href="#!"><img src="images/appbutton/googleplay-btn.svg" style="width:140px" /></a></li>
					</ul>
				</div>
			</div>
		</div>

		<!-- Trademark + Redes -->
		<div class="border-t py-4 border-gray-300">
			<div class="flex flex-col md:flex-row items-center justify-between gap-3">
				<div class="text-sm text-gray-500 text-center md:text-left">
					© @DateTime.Now.Year @Trademark.Empresa. @Trademark.TextoLegal
				</div>

				<div class="flex flex-row gap-4 items-center">
					<div class="text-gray-500">Síguenos en</div>
					<ul class="flex items-center gap-2">
						@foreach (var red in RedesSociales) {
							<li>
								<a href="@red.Url" class="inline-flex justify-center items-center border rounded h-8 w-8 border-gray-300 hover:border-green-600 hover:text-green-600 transition ease-in-out">
									<img src="@red.ImagePath" alt="@red.Nombre" class="h-5 w-5" />
								</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</div>
	</div>
</footer>
