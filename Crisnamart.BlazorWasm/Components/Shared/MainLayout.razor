@inherits LayoutComponentBase
@inject Microsoft.JSInterop.IJSRuntime JS
@code{

	List<Domain.CategoriaModel> categorias = Domain.PrototipoContenido.GetCategoriaModelEjemplos();
	List<Domain.FooterColumn> footerColumns = Domain.PrototipoContenido.GetFooterColumnsEjemplos();

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			try
			{
				// Attach controls to swiper web components and initialize any countdowns
				await JS.InvokeVoidAsync("initializeCountdowns");
				// Hide initial loader overlay
				await JS.InvokeVoidAsync("hideAppLoader");
			}
			catch (Exception ex)
			{
				Console.Error.WriteLine($"JS initialization failed: {ex}");
			}
		}
	}
}

<!-- Top navbar -->
<NavBar Categorias=@categorias />

<!-- Main content -->
<main class="flex-grow-1 container mt-4">
	@Body
</main>



<Footer Columns="@Domain.PrototipoContenido.GetFooterColumnsEjemplos()"
		MediosDePago="@Domain.PrototipoContenido.GetMediosDePagoEjemplo()"
		RedesSociales="@Domain.PrototipoContenido.GetRedesSocialesEjemplo()"
		MediosDeContacto="@Domain.PrototipoContenido.GetMediosDeContactoEjemplo()"
		FooterTrademark1="@Domain.PrototipoContenido.GetTrademarkEjemplo()" />


<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>
