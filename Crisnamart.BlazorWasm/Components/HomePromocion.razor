@code {
    [Parameter]
    public List<Domain.PromocionModel> Promociones { get; set; } = new();
}


@* Components/Promocion.razor *@
<section>
    <div class="container">
        <div class="flex md:space-x-2 lg:space-x-6 flex-wrap md:flex-nowrap">
            @foreach (var item in Promociones) {
                <div class="w-full md:w-1/2 mb-3">
                    <div class="py-10 px-8 rounded-lg"
                         style="background: url(@item.ImagenUrl) no-repeat; background-size: cover; background-position: center">
                        <div class="flex flex-col gap-5">
                            <div class="flex flex-col gap-1">
                                <h2 class="font-bold text-xl">@item.Titulo</h2>
                                <p>
                                    Descuentos de hasta -
                                    <span class="font-bold text-gray-800">@item.Descuento%</span>
                                </p>
                            </div>

                            <div class="flex flex-wrap">
                                <a href="@item.Link"
                                   class="btn inline-flex items-center gap-x-2 bg-gray-800 text-white border-gray-800 disabled:opacity-50 disabled:pointer-events-none hover:text-white hover:bg-gray-900 hover:border-gray-900 active:bg-gray-900 active:border-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300">
                                    @item.TextoBoton
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>