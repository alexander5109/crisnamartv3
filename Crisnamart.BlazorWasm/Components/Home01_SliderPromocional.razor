@code {
    [Parameter]
    public List<Domain.SlidePromocionalModel> Slides { get; set; } = new();
    public string clasesInternas = "lg:py-32 p-12 lg:pl-12 xl:w-2/5 md:w-3/5";
}

<section class="mt-8">
    <div class="container">
        <swiper-container id="swiper-1"
                          slides-per-view="1"
                          effect="fade"
                          pagination="true"
                          navigation="true"
                          autoplay-delay="3000">

            @foreach (var slide in Slides) {
                <swiper-slide style="background: url(@slide.ImagePath) no-repeat; background-size: cover; border-radius:0.5rem; background-position: center">
                    <div class="@clasesInternas">
                        <span class="inline-block p-2 text-sm align-baseline leading-none rounded-lg bg-yellow-500 text-gray-900 font-semibold">
                            @slide.Subtitulo
                        </span>
                        <div class="my-7 flex flex-col gap-2">
                            <h2 class="text-gray-900 text-xl lg:text-5xl font-bold leading-tight">@((MarkupString)slide.TituloHtml)</h2>
                            <p class="text-md font-light">@slide.Descripcion</p>
                        </div>
                        <a href="@slide.Link"
                           class="btn inline-flex items-center gap-x-2 bg-gray-800 text-white border-gray-800 disabled:opacity-50 disabled:pointer-events-none hover:text-white hover:bg-gray-900 hover:border-gray-900 active:bg-gray-900 active:border-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300">
                            @slide.TextoBoton
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="icon icon-tabler icon-tabler-arrow-right inline-block" width="14" height="14"
                                 viewBox="002424" stroke-width="2" stroke="currentColor" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M00h24v24H0z" fill="none" />
                                <path d="M512h14" />
                                <path d="M1318l6 -6" />
                                <path d="M136l66" />
                            </svg>
                        </a>
                    </div>
                </swiper-slide>
            }

            <!-- pagination slot -->
            <div slot="pagination" class="swiper-pagination !bottom-14"></div>

            <!-- navigation slots (prev/next) -->
            <button slot="navigation-prev" class="swiper-button-prev absolute left-4 top-1/2 -translate-y-1/2 bg-white rounded-full p-2 shadow">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="002424" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="1518912156"></polyline></svg>
            </button>
            <button slot="navigation-next" class="swiper-button-next absolute right-4 top-1/2 -translate-y-1/2 bg-white rounded-full p-2 shadow">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="002424" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="918151296"></polyline></svg>
            </button>

        </swiper-container>
    </div>
</section>